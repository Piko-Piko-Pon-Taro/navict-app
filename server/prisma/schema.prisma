datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
  shadowDatabaseUrl = env("API_SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// navictを使う一般ユーザー
model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String?   @unique
  bio         String?
  img         String?
  twitterLink String?
  githubLink  String?
  websiteLink String?
  firebaseUid String    @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  roadmaps    Roadmap[]
  likes       Like[]
}

// ロードマップのタグ(マスター)
model Tag {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  roadmaps  Roadmap[]
}

// ロードマップ
model Roadmap {
  id              Int      @id @default(autoincrement())
  title           String
  description     String?
  forkedRoadmapId Int?
  firstStepId     Int?
  isGoalSet       Boolean  @default(false)
  isDone          Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
  tags            Tag[]
  steps           Step[]
  likes           Like[]
}

// ロードマップのいいね
model Like {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  roadmapId Int
  roadmap   Roadmap  @relation(fields: [roadmapId], references: [id])
}

// ロードマップの各ステップ
model Step {
  id         Int      @id @default(autoincrement())
  memo       String?
  nextStepId Int?
  isDone     Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  roadmapId  Int
  roadmap    Roadmap  @relation(fields: [roadmapId], references: [id])
  libraryId  Int
  library    Library  @relation(fields: [libraryId], references: [id])
}

// ステップの内容(マスター)
model Library {
  id        Int      @id @default(autoincrement())
  title     String
  link      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  steps     Step[]
}